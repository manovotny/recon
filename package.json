{
  "name": "recon",
  "productName": "Recon",
  "version": "0.0.0",
  "description": "An iTunes search and notification app built using Electron.",
  "author": {
    "name": "Michael Novotny",
    "email": "manovotny@gmail.com",
    "url": "htts://manovotny.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manovotny/recon.git"
  },
  "keywords": [
    "alerts",
    "app",
    "electron",
    "itunes",
    "notifications",
    "search"
  ],
  "engines": {
    "node": ">=6"
  },
  "main": "main/index.js",
  "scripts": {
    "build": "next build renderer && next export renderer && build --dir",
    "eslint": "eslint . --ext .json --ext .js",
    "lint": "npm run eslint",
    "start": "electron .",
    "test": "npm run lint"
  },
  "build": {
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "mac": {
      "identity": null
    }
  },
  "dependencies": {
    "app-root-path": "2.0.1",
    "electron-debug": "1.4.0",
    "electron-devtools-installer": "2.2.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.3",
    "electron-window-state": "4.1.1",
    "fs-extra": "4.0.2",
    "lodash.throttle": "4.1.1",
    "next": "3.2.2",
    "next-redux-wrapper": "1.3.4",
    "prop-types": "15.6.0",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-thunk": "2.2.0",
    "styled-components": "2.2.0",
    "styled-reset": "0.1.2"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "1.2.0",
    "devtron": "1.4.0",
    "electron": "1.7.8",
    "electron-builder": "19.31.1",
    "eslint-config-get-off-my-lawn": "2.1.1",
    "redux-devtools-extension": "2.13.2"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
