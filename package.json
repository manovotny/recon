{
  "name": "recon",
  "version": "0.0.0",
  "description": "An iTunes search and notification app built using Electron.",
  "author": {
    "name": "Michael Novotny",
    "email": "manovotny@gmail.com",
    "url": "htts://manovotny.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manovotny/recon.git"
  },
  "homepage": "https://github.com/manovotny/recon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manovotny/recon/issues"
  },
  "keywords": [
    "alerts",
    "app",
    "electron",
    "itunes",
    "notifications",
    "search"
  ],
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.production.js --progress --profile --colors",
    "hot": "node webpack.server.js",
    "start": "NODE_ENV=development HOT=1 electron .",
    "test": "xo && mocha",
    "xo": "xo"
  },
  "devDependencies": {
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "electron": "1.3.4",
    "express": "^4.13.3",
    "mocha": "^2.3.0",
    "react": "15.3.1",
    "react-dom": "15.3.1",
    "sinon": "^1.17.2",
    "webpack": "^1.12.1",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.4.1",
    "webpack-target-electron-renderer": "^0.3.0",
    "xo": "^0.12.1"
  },
  "xo": {
    "envs": [
      "browser",
      "mocha",
      "node"
    ],
    "esnext": true,
    "space": 4,
    "rules": {
      "quote-props": [
        2,
        "as-needed"
      ]
    }
  }
}
